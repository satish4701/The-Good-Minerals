<section id="CustomBanner-{{ section.id }}" class="custom-banner custom-banner--medium">
  <div class="page-width">
    <!-- Background Image -->
    {%- if section.settings.image != blank -%}
      <div class="custom-banner__background media">
        {{
          section.settings.image
          | image_url: width: 2000
          | image_tag: class: 'custom-banner__background-image', loading: 'lazy', alt: section.settings.image.alt
          | escape
        }}
      </div>
    {%- else -%}
      <div class="custom-banner__background media placeholder">
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'custom-banner__background-image placeholder-svg' }}
      </div>
    {%- endif -%}

    <!-- Overlay -->
    <div class="custom-banner__overlay"></div>

    <!-- Content -->
    <div class="custom-banner__container">
      <div class="custom-banner__content">
        <div class="custom-banner__text-content">
          {%- if section.settings.heading != blank -%}
            <h1 class="custom-banner__heading">
              {{ section.settings.heading }}
            </h1>
          {%- endif -%}

          {%- if section.settings.text != blank -%}
            <div class="custom-banner__text rte">
              {{ section.settings.text }}
            </div>
          {%- endif -%}

          {%- if section.settings.button_label != blank -%}
            <div class="custom-banner__button-wrapper">
              <a
                {% if section.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.button_link }}"
                {% endif %}
                class="custom-banner__button button"
              >
                {{- section.settings.button_label | escape -}}
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

{%- style -%}
  #CustomBanner-{{ section.id }} .custom-banner__button {
  background-color: {{ section.settings.button_background_color }};
  color: {{ section.settings.button_text_color }};
  }


  #CustomBanner-{{ section.id }} .custom-banner__overlay {
  background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
  }
{%- endstyle -%}
<style>
  /* Custom Banner with Text Section Styles */

  .custom-banner {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
    max-height: 960px;
  }

  .custom-banner__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .custom-banner__background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .custom-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 2;
  }

  .custom-banner__container {
    position: relative;
    z-index: 3;
    max-width: 100%;
    margin: 0 auto;
    padding: 0;
  }

  .custom-banner__heading {
    font-weight: 700;
    font-size: 48px;
    line-height: 100%;
    letter-spacing: 0;
    color: var(--white);
    margin: 0;
  }
  .custom-banner__heading p {
    margin: 0;
  }
  .custom-banner__text {
    font-weight: 500;
    font-size: 18px;
    line-height: 27px;
    letter-spacing: 0;
    max-width: 450px;
    width: 100%;
    margin: 20px 0;
    color: var(--white);
  }

  .custom-banner__button-wrapper {
    margin-top: 2rem;
  }

  .custom-banner__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    text-decoration: none;
    border-radius: 108px;
    transition: all 0.3s ease;
    cursor: pointer;
    height: 56px;
    line-height: 56px;
    font-size: 14px;
    white-space: nowrap;
    min-width: 218px;
    border: none;
  }
  .custom-banner__button:hover {
    background: var(--dark-primary-color) !important;
    color: var(--white) !important;
  }
  .custom-banner__button::before,
  .custom-banner__button::after {
    content: unset;
  }
  @media (max-width: 991px) {
    .custom-banner__heading {
      font-size: 40px;
    }
    .custom-banner__button {
      height: 44px;
      line-height: 44px;
    }
  }
  @media (max-width: 767px) {
    .custom-banner__background::before {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.3);
      content: '';
      z-index: 1;
    }
    .custom-banner__background-image {
      object-position: 60% center !important
    ;
    }
  }
</style>
{% schema %}
{
  "name": "Custom Banner with Text",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },

    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Save time and use this skin-loving 3 in 1 as a concealer, foundation & powder</p>",
      "label": "Text"
    },

    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Bundle and save",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },

    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },

    {
      "type": "color",
      "id": "text_color",
      "default": "#ffffff",
      "label": "Text Color"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "default": "#f8b4c4",
      "label": "Button Background Color"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "default": "#ffffff",
      "label": "Button Text Color"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Custom Banner with Text"
    }
  ]
}
{% endschema %}
