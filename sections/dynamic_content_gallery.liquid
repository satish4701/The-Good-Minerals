<section
  id="DynamicGallery-{{ section.id }}"
  class="dynamic-gallery dynamic-gallery--{{ section.settings.layout }}"
  data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="gallery__container">

      <!-- Gallery Navigation -->
      <div class="gallery__navigation">
        {%- for block in section.blocks -%}
          {%- if block.type == 'image_content' -%}
            <button
              class="gallery__nav-item{% if forloop.first %} gallery__nav-item--active{% endif %}"
              data-target="{{ block.id }}"
              data-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                <div class="gallery__nav-image">
                  {{ block.settings.image
                    | image_url: width: 2048
                    | image_tag:
                    class: 'gallery__nav-thumbnail',
                    loading: 'lazy',
                    alt: block.settings.image.alt | escape
                  }}
                </div>
              {%- endif -%}

            </button>
          {%- endif -%}
        {%- endfor -%}
      </div>

      <!-- Gallery Content -->
      <div class="gallery__content-wrapper">
        {%- for block in section.blocks -%}
          {%- if block.type == 'image_content' -%}
            <div
              class="gallery__content{% if forloop.first %} gallery__content--active{% endif %}"
              data-content="{{ block.id }}"
              data-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}>
              <div class="gallery__content-inner">

                <!-- Image Section -->
                <div class="gallery__image-section">
                  {%- if block.settings.image != blank -%}
                    <div class="gallery__media media">
                      {{ block.settings.image
                        | image_url: width: 1200
                        | image_tag:
                        class: 'gallery__image',
                        loading: 'lazy',
                        alt: block.settings.image.alt | escape
                      }}
                    </div>
                  {%- else -%}
                    <div class="gallery__media media placeholder">
                      {{ 'hero-apparel-1' | placeholder_svg_tag: 'gallery__image placeholder-svg' }}
                    </div>
                  {%- endif -%}
                </div>

                <!-- Text Content Section -->
                <div class="gallery__text-section">
                  <div class="gallery__text-content">

                    {%- if block.settings.content != blank -%}
                      <div class="gallery__description rte">
                        {{ block.settings.content }}
                      </div>
                    {%- endif -%}
                  </div>
                </div>

              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>

    </div>
  </div>
</section>


{%- style -%}
  #DynamicGallery-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }

  #DynamicGallery-{{ section.id }}
  .gallery__content {
    color: {{ section.settings.text_color }};
  }

  #DynamicGallery-{{ section.id }}
  .gallery__button {
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    border-color: {{ section.settings.button_background_color }};
  }

  #DynamicGallery-{{ section.id }}.gallery__button:hover {
    background-color: {{ section.settings.button_background_color | color_darken: 10 }};
    border-color: {{ section.settings.button_background_color | color_darken: 10 }};
  }
{%- endstyle -%}


<style>
  /* Dynamic Content Gallery Section Styles */

  .dynamic-gallery {
    position: relative;
    width: 100%;
    padding: 40px 0 61px;
    overflow: hidden;
  }

  .gallery__container {
    position: relative;
    max-width: 100%;
    margin: 0 auto;
  }

  /* Gallery Navigation */
  .gallery__navigation {
    display: flex;
    flex-wrap: wrap;
    gap: 50px;
    margin-bottom: 53px;
    justify-content: center;
    align-items: center;
  }

  .gallery__nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 150px;
    height: 60px;
    text-align: center;
    border: none;
    padding: 0;
    border-bottom: 5px solid transparent;
  }


  .gallery__nav-item--active {
    border-color: var(--light-primary-color);
  }

  .gallery__nav-image {
    width: 100%;
    height: 100%;
    flex-shrink: 0;
  }

  .gallery__nav-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Gallery Content Wrapper */
  .gallery__content-wrapper {
    position: relative;
  }

  .gallery__content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: all 0.5s ease;
    transform: translateX(20px);
  }

  .gallery__content--active {
    opacity: 1;
    visibility: visible;
    transform: translateX(0);
    position: relative;
  }

  .gallery__content-inner {
    display: flex;
    align-items: center;
    height: 100%;
  }

  /* Image Section */
  .gallery__image-section {
    flex: 1;
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .gallery__media {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .gallery__image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    transition: transform 0.3s ease;
  }

  .gallery__image:hover {
    transform: scale(1.05);
  }

  /* Text Content Section */

  .gallery__description {
    max-width: 460px;
    margin: 0 auto;
    width: 100%;
  }
  .gallery__description  p {
    font-weight: 500;
    font-style: Italic;
    font-size: 14px;
    line-height: 25.5px;
    letter-spacing: 0;
    text-align: center;

  }


  /* Layout Variations */
  .dynamic-gallery--image-right .gallery__content-inner {
    flex-direction: row-reverse;
  }

  .dynamic-gallery--stacked .gallery__content-inner {
    flex-direction: column;
  }

  .dynamic-gallery--stacked .gallery__image-section {
    max-height: 400px;
  }


  /* Animation Support */
  .gallery__content {
    transition: opacity 0.5s ease
    , visibility 0.5s ease
    , transform 0.5s ease;
  }

  .gallery__nav-item {
    transition: all 0.3s ease;
  }

  .gallery__image {
    transition: transform 0.3s ease;
  }


</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
  const gallery = document.getElementById('DynamicGallery-{{ section.id }}');
  if (!gallery) return;
  
  const navItems = gallery.querySelectorAll('.gallery__nav-item');
  const contentItems = gallery.querySelectorAll('.gallery__content');
  
  function switchContent(targetId) {
    // Remove active class from all navigation items and content
    navItems.forEach(item => item.classList.remove('gallery__nav-item--active'));
    contentItems.forEach(item => item.classList.remove('gallery__content--active'));
  
    // Add active class to clicked navigation item
    const activeNavItem = gallery.querySelector(`[data-target="${targetId}"]`);
    if (activeNavItem) {
      activeNavItem.classList.add('gallery__nav-item--active');
    }
  
    // Add active class to corresponding content
    const activeContent = gallery.querySelector(`[data-content="${targetId}"]`);
    if (activeContent) {
      activeContent.classList.add('gallery__content--active');
    }
  }
  
  // Add click event listeners to navigation items
  navItems.forEach(item => {
    item.addEventListener('click', function() {
      const targetId = this.getAttribute('data-target');
      console.log(targetId);
      if (targetId) {
        switchContent(targetId);
      }
    });
  });
  });
</script>
