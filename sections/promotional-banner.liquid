<section class="promotional-banner section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="promotional-banner__container">
      {%- for block in section.blocks -%}
        <div class="promotional-banner__panel" {{ block.shopify_attributes }}>
          <div class="promotional-banner__content">
            <div class="promotional-banner__text-content">
              {%- if block.settings.heading != blank -%}
                <h2 class="promotional-banner__heading">
                  {{ block.settings.heading }}
                </h2>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <div class="promotional-banner__description">
                  {{ block.settings.description }}
                </div>
              {%- endif -%}

              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link != blank %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="promotional-banner__button button"
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% endif %}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
            </div>

            {%- if block.settings.image != blank -%}
              <div class="promotional-banner__image-wrapper">
                <div class="promotional-banner__image">
                  {{
                    block.settings.image
                    | image_url: width: 1500
                    | image_tag: class: 'promotional-banner__image-element'
                  }}
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<style>
  .promotional-banner {
    background-color: var(--light-secondary-color);
  }

  .promotional-banner__container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
  }

  .promotional-banner__panel {
    background-color: var(--secondary-color);
    border-radius: 16px;
    position: relative;
    overflow: hidden;
  }
  .promotional-banner__container .promotional-banner__panel:first-of-type {
    background-color: var(--hover-primary-color);
  }

  .promotional-banner__content {
    display: flex;
    flex-direction: row;
    gap: 39px;
    height: 100%;
  }

  .promotional-banner__text-content {
    max-width: 41.7%;
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 111px 0 118px 30px;
    width: 100%;
  }

  .promotional-banner__heading {
    font-size: 24px;
    font-weight: 600;
    color: var(--light-black);
    margin: 0;
    line-height: 24px;
    letter-spacing: 0;
    max-width: 233px;
  }

  .promotional-banner__description p {
    color: var(--light-black);
    font-size: 14px;
    line-height: 25.5px;
    margin: 0;
    font-weight: 500;
    max-width: 287px;
    letter-spacing: 0;
  }

  .promotional-banner__button {
    background-color: transparent;
    color: var(--dark-primary-color);
    border: none;
    border-radius: 25px;
    height: 56px;
    line-height: 56px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: all 0.3s ease;
    align-self: flex-start;
    border: 1px solid var(--secondary-color);
    border-radius: 108px;
    max-width: 187px;
    width: 100%;
  }
  .promotional-banner__container .promotional-banner__panel:last-of-type .promotional-banner__button {
    background-color: var(--white);
    color: var(--dark-primary-color);
    border: 1px solid transparent;
  }
  .promotional-banner__button::after,
  .promotional-banner__button::before {
    content: unset;
  }

  .promotional-banner__image-wrapper {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .promotional-banner__image {
    position: relative;
    width: 100%;
    max-width: 100%;
    display: flex;
    height: 100%;
  }

  .promotional-banner__image-element {
    width: 100%;
    height: 100%;
    border-radius: 0 16px 16px 0;
    object-fit: cover;
  }

  /* Responsive adjustments */
  @media screen and (max-width: 1200px) {
    .promotional-banner__content {
      flex-direction: column;
      gap: 0;
    }
    .promotional-banner__text-content {
      max-width: 100%;
      padding: 50px 24px;
    }
    .promotional-banner__description p,
    .promotional-banner__heading {
      max-width: 100%;
    }
    .promotional-banner__container {
      gap: 20px;
    }
    .promotional-banner__button {
      height: 48px;
      line-height: 48px;
    }
  }
  @media screen and (max-width: 768px) {
    .promotional-banner__text-content {
      padding: 50px 16px 30px;
    }
  }
  @media screen and (max-width: 575px) {
    .promotional-banner__container {
      grid-template-columns: 1fr;
      gap: 16px;
    }
    .promotional-banner__text-content {
      padding: 35px 15px 20px;
    }
    .promotional-banner__button {
      width: 100%;
      max-width: 100%;
    }
    .promotional-banner__heading {
      font-size: 22px;
    }
  }

  /* Animation for better UX */
  .promotional-banner__panel {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
</style>
{% schema %}
{
  "name": "Promotional Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "panel",
      "name": "Panel",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Find the right shade for you",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "default": "<p>We have 12 adaptable, blendable shades of clean powder foundations and we've matched over 50,000 faces - your perfect shade is right here</p>",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Find My Shade",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotional Banner",
      "blocks": [
        {
          "type": "panel"
        },
        {
          "type": "panel"
        }
      ]
    }
  ]
}
{% endschema %}
